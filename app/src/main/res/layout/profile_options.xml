<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDialogScrim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfileAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_person_24" />

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Asep Kopling"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/imgProfileAvatar"
                app:layout_constraintStart_toEndOf="@id/imgProfileAvatar"
                app:layout_constraintEnd_toStartOf="@id/btnCloseDialog"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/tvProfileUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:text="'@sajhs"
                app:layout_constraintTop_toBottomOf="@id/tvProfileName"
                app:layout_constraintStart_toStartOf="@id/tvProfileName"
                app:layout_constraintEnd_toStartOf="@id/btnCloseDialog"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <ImageButton
                android:id="@+id/btnCloseDialog"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@android:color/darker_gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProfileChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chat"
                app:layout_constraintTop_toBottomOf="@id/imgProfileAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="24dp"
                android:backgroundTint="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProfileUnfriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Unfriend"
                app:layout_constraintTop_toBottomOf="@id/btnProfileChat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/primary"
                android:textColor="@color/primary"
                app:cornerRadius="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
