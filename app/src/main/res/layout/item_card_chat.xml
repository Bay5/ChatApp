<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgChatAvatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="@string/app_name"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvChatName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/imgChatAvatar"
        app:layout_constraintStart_toEndOf="@id/imgChatAvatar"
        app:layout_constraintEnd_toStartOf="@id/tvTimestamp"
        android:layout_marginStart="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Bay" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.51"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/imgChatAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvChatLastMessage"/>

    <TextView
        android:id="@+id/tvChatLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvChatName"
        app:layout_constraintStart_toStartOf="@id/tvChatName"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Loginkan" />

    <TextView
        android:id="@+id/tvUnreadBadge"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="123"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="visible"
        android:background="@drawable/bg_unread_badge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imgChatAvatar"/>

</androidx.constraintlayout.widget.ConstraintLayout>
